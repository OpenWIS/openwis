<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>eu.akka.openwis</groupId>
		<artifactId>openwis</artifactId>
			<version>develop-SNAPSHOT</version>
		<relativePath>../pom.xml</relativePath>
	</parent>

	<groupId>org.openwis.dataservice</groupId>
	<artifactId>openwis-dataservice</artifactId>
	<packaging>pom</packaging>
	<name>OpenWIS DataService project</name>

  <modules>
    <module>openwis-dataservice-common</module>
	<module>openwis-dataservice-cache</module>
	<module>openwis-dataservice-server</module>

  </modules>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3.1</version>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
          <encoding>UTF-8</encoding>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.8.1</version>
      <scope>test</scope>
    </dependency>
    
    <!-- Prevent compilation issue with maven2 -->
   <dependency>
      <groupId>eu.akka.jbosseap</groupId>
      <artifactId>hibernate-annotations</artifactId>
      <version>5.1.0</version>
      <scope>provided</scope>
   </dependency>

  </dependencies>
</project>