<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>openwis-dataservice-server</artifactId>
		<groupId>org.openwis.dataservice.server</groupId>
		<version>develop-SNAPSHOT</version>
		<relativePath>../pom.xml</relativePath>
	</parent>

	<groupId>org.openwis.dataservice.server</groupId>
	<artifactId>openwis-dataservice-server-ejb</artifactId>
	<name>openwis-dataservice-server-ejb</name>
	<packaging>jar</packaging>

	<properties>
		<arquillian.version>1.0.0.Alpha4</arquillian.version>
		<version.org.apache.openejb_openejb.core>3.1.3</version.org.apache.openejb_openejb.core>
		<cxf.version>2.2.10</cxf.version>
	</properties>

	<dependencies>
         <dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>hibernate-annotations</artifactId>
            <version>3.4.0.GA</version>
            <scope>provided</scope>
         </dependency>
		<dependency>
			<groupId>eu.akka.openwis.harness</groupId>
			<artifactId>openwis-harness-localdatasource</artifactId>
			<version>${project.version}</version>
		</dependency>

		<dependency>
			<groupId>org.openwis.dataservice.common</groupId>
			<artifactId>openwis-dataservice-common-domain</artifactId>
			<version>${project.version}</version>
			<type>ejb</type>
			<exclusions>
				<exclusion>
					<groupId>eu.akka.jbosseap</groupId>
					<artifactId>jboss-as-client</artifactId>
<!-- 					<scope>test</scope> -->
				</exclusion>
				<exclusion>
					<groupId>eu.akka.jbosseap-test</groupId>
					<artifactId>dom4j</artifactId>
<!-- 					<scope>test</scope> -->
				</exclusion>
				<exclusion>
					<groupId>eu.akka.jbosseap-test</groupId>
					<artifactId>hibernate-entitymanager</artifactId>
<!-- 					<scope>test</scope> -->
				</exclusion>
			</exclusions>
		</dependency>

       <dependency>
         <groupId>org.openwis.management.service</groupId>
         <artifactId>openwis-management-service-common</artifactId>
         <version>${project.version}</version>
         <type>jar</type>
       </dependency>
		<dependency>
			<groupId>org.openwis.management</groupId>
			<artifactId>openwis-management-client</artifactId>
			<version>${project.version}</version>
			<type>jar</type>
		</dependency>

		<dependency>
			<groupId>org.openwis.dataservice.common</groupId>
			<artifactId>openwis-dataservice-common-timer</artifactId>
			<version>${project.version}</version>
			<type>ejb</type>
		</dependency>

		<dependency>
			<groupId>org.openwis.dataservice.common</groupId>
			<artifactId>openwis-dataservice-common-utils</artifactId>
			<version>${project.version}</version>
			<type>jar</type>
		</dependency>

		<dependency>
			<groupId>com.sun.javaee</groupId>
			<artifactId>javaee</artifactId>
			<version>5.0</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>org.hibernate</groupId>
			<artifactId>hibernate-core</artifactId>
			<version>3.3.1.GA</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>org.jboss.arquillian</groupId>
			<artifactId>arquillian-junit</artifactId>
			<version>${arquillian.version}</version>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>org.dbunit</groupId>
			<artifactId>dbunit</artifactId>
			<version>2.4.8</version>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>org.openwis.dataservice.cache</groupId>
			<artifactId>openwis-dataservice-cache-ejb</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.hibernate</groupId>
			<artifactId>hibernate-jbosscache2</artifactId>
			<version>3.3.2.GA</version>
			<type>jar</type>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>org.openwis.management.service</groupId>
			<artifactId>openwis-management-service-ejb</artifactId>
			<version>${project.version}</version>
			<type>jar</type>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>org.apache.openejb</groupId>
			<artifactId>openejb-core</artifactId>
			<version>${version.org.apache.openejb_openejb.core}</version>
			<exclusions>
				<exclusion>
					<groupId>org.apache.openjpa</groupId>
					<artifactId>openjpa</artifactId>
				</exclusion>
			</exclusions>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<!-- version 2.5 creates separate test suites per class -->
				<version>2.4.3</version>
				<configuration>
					<includes>
						<include>**/*TestCase.java</include>
					</includes>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<id>arq-openejb-embedded-hibernate</id>

			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>

			<dependencies>
				<dependency>
					<groupId>org.jboss.arquillian.container</groupId>
					<artifactId>arquillian-openejb-embedded-3.1</artifactId>
					<version>${arquillian.version}</version>
					<scope>test</scope>
				</dependency>
				<dependency>
					<groupId>javax.inject</groupId>
					<artifactId>javax.inject</artifactId>
					<version>1</version>
					<scope>test</scope>
				</dependency>
				<dependency>
					<groupId>org.hibernate</groupId>
					<artifactId>hibernate-entitymanager</artifactId>
					<version>3.4.0.GA</version>
					<scope>test</scope>
					<exclusions>
						<exclusion>
							<groupId>javax.persistence</groupId>
							<artifactId>persistence-api</artifactId>
						</exclusion>
						<exclusion>
							<groupId>javax.transaction</groupId>
							<artifactId>jta</artifactId>
						</exclusion>
					</exclusions>
				</dependency>
				<dependency>
					<groupId>org.slf4j</groupId>
					<artifactId>slf4j-jdk14</artifactId>
					<version>1.4.2</version>
					<scope>test</scope>
				</dependency>
			</dependencies>
			<build>
				<testResources>
					<testResource>
						<directory>src/test/resources</directory>
					</testResource>
					<testResource>
						<directory>src/test/resources-openejb-embedded-shared</directory>
					</testResource>
					<testResource>
						<directory>src/test/resources-openejb-embedded-hibernate</directory>
					</testResource>
				</testResources>
			</build>
		</profile>
		<profile>
			<id>generate-wsdl</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.cxf</groupId>
						<artifactId>cxf-java2ws-plugin</artifactId>
						<version>${cxf.version}</version>
						<dependencies>
							<dependency>
								<groupId>org.apache.cxf</groupId>
								<artifactId>cxf-rt-frontend-jaxws</artifactId>
								<version>${cxf.version}</version>
								<scope>compile</scope>
							</dependency>
							<dependency>
								<groupId>org.apache.cxf</groupId>
								<artifactId>cxf-rt-frontend-simple</artifactId>
								<version>${cxf.version}</version>
								<scope>compile</scope>
							</dependency>
							<dependency>
								<groupId>org.openwis.dataservice.common</groupId>
								<artifactId>openwis-dataservice-common-domain</artifactId>
								<version>${project.version}</version>
								<scope>compile</scope>
							</dependency>
							<dependency>
								<groupId>com.sun.javaee</groupId>
								<artifactId>javaee</artifactId>
								<version>5.0</version>
								<scope>compile</scope>
							</dependency>
						</dependencies>

						<executions>
							<execution>
								<id>request-service-to-wsdl</id>
								<phase>process-classes</phase>
								<configuration>
									<className>org.openwis.datasource.server.service.impl.RequestServiceImpl</className>
									<genWsdl>true</genWsdl>
									<argline>-createxsdimports</argline>
									<verbose>true</verbose>
									<outputFile>${basedir}/target/generated/wsdl/RequestService.wsdl</outputFile>
								</configuration>
								<goals>
									<goal>java2ws</goal>
								</goals>
							</execution>

							<execution>
								<id>subscription-service-to-wsdl</id>
								<phase>process-classes</phase>
								<configuration>
									<className>org.openwis.datasource.server.service.impl.SubscriptionServiceImpl</className>
									<genWsdl>true</genWsdl>
									<argline>-createxsdimports</argline>
									<verbose>true</verbose>
									<outputFile>${basedir}/target/generated/wsdl/SubscriptionService.wsdl</outputFile>
								</configuration>
								<goals>
									<goal>java2ws</goal>
								</goals>
							</execution>

							<execution>
								<id>productmetadata-service-to-wsdl</id>
								<phase>process-classes</phase>
								<configuration>
									<className>org.openwis.datasource.server.service.impl.ProductMetadataServiceImpl</className>
									<genWsdl>true</genWsdl>
									<argline>-createxsdimports</argline>
									<verbose>true</verbose>
									<outputFile>${basedir}/target/generated/wsdl/ProductMetadataService.wsdl</outputFile>
								</configuration>
								<goals>
									<goal>java2ws</goal>
								</goals>
							</execution>

							<execution>
								<id>processedrequest-service-to-wsdl</id>
								<phase>process-classes</phase>
								<configuration>
									<className>org.openwis.datasource.server.service.impl.ProcessedRequestServiceImpl</className>
									<genWsdl>true</genWsdl>
									<argline>-createxsdimports</argline>
									<verbose>true</verbose>
									<outputFile>${basedir}/target/generated/wsdl/ProcessedRequestService.wsdl</outputFile>
								</configuration>
								<goals>
									<goal>java2ws</goal>
								</goals>
							</execution>


							<execution>
								<id>blacklist-service-to-wsdl</id>
								<phase>process-classes</phase>
								<configuration>
									<className>org.openwis.datasource.server.service.impl.BlacklistServiceImpl</className>
									<genWsdl>true</genWsdl>
									<argline>-createxsdimports</argline>
									<verbose>true</verbose>
									<outputFile>${basedir}/target/generated/wsdl/BlacklistService.wsdl</outputFile>
								</configuration>
								<goals>
									<goal>java2ws</goal>
								</goals>
							</execution>

							<execution>
								<id>product-arrival-listener</id>
								<phase>process-classes</phase>
								<configuration>
									<className>org.openwis.datasource.server.service.impl.ProductArrivalListenerImpl</className>
									<genWsdl>true</genWsdl>
									<argline>-createxsdimports</argline>
									<verbose>true</verbose>
									<outputFile>${basedir}/target/generated/wsdl-harness/ProductArrivalListener.wsdl</outputFile>
								</configuration>
								<goals>
									<goal>java2ws</goal>
								</goals>
							</execution>

							<execution>
								<id>user-alarm-service-to-wsdl</id>
								<phase>process-classes</phase>
								<configuration>
									<className>org.openwis.dataservice.useralarms.UserAlarmManagerImpl</className>
									<genWsdl>true</genWsdl>
									<argline>-createxsdimports</argline>
									<verbose>true</verbose>
									<outputFile>${basedir}/target/generated/wsdl/UserAlarmService.wsdl</outputFile>
								</configuration>
								<goals>
									<goal>java2ws</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
