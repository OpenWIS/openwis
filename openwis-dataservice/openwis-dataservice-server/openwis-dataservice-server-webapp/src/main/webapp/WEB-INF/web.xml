<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app id="openwis-webapp">
	<display-name>DataSource-Initializer</display-name>
	<description>
		Initializer servlet for OpenWis Data Service
  	</description>
	
	<!--<listener>
		<listener-class>
			org.openwis.datasource.server.init.ExtractionTimerListener
		</listener-class>
	</listener>
	-->
	
	<servlet>
		<servlet-name>TimerClient</servlet-name>
		<servlet-class>org.openwis.datasource.server.init.InitServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>TimerClient</servlet-name>
		<url-pattern>/initDataSource</url-pattern>
	</servlet-mapping>
	
</web-app>
