<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>openwis-securityservice-usermanagement-server</artifactId>
		<groupId>io.openwis.securityservice.usermanagement.server</groupId>
		<version>develop-SNAPSHOT</version>
		<relativePath>../pom.xml</relativePath>
	</parent>

	<groupId>io.openwis.securityservice.usermanagement.server</groupId>
	<artifactId>openwis-securityservice-usermanagement-server-ejb</artifactId>
	<name>openwis-securityservice-usermanagement-server-ejb</name>
	<packaging>jar</packaging>

	<dependencies>

		<dependency>
			<groupId>io.openwis.securityservice.usermanagement.common</groupId>
			<artifactId>openwis-securityservice-usermanagement-common</artifactId>
			<version>${project.version}</version>
			<type>ejb</type>
		</dependency>

		<dependency>
			<groupId>com.novell.ldap</groupId>
			<artifactId>jldap</artifactId>
			<version>4.3</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>

		<dependency>
			<groupId>com.sun.javaee</groupId>
			<artifactId>javaee</artifactId>
			<version>5.0</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.5.2</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>commons-collections</groupId>
			<artifactId>commons-collections</artifactId>
			<version>3.2.1</version>
		</dependency>
		
		<dependency>
			<groupId>commons-lang</groupId>
			<artifactId>commons-lang</artifactId>
			<version>2.4</version>
		</dependency>

		<dependency>
			<groupId>io.openwis.management</groupId>
			<artifactId>openwis-management-client</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>

	<profiles>
		<profile>
			<id>generate-wsdl</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.cxf</groupId>
						<artifactId>cxf-java2ws-plugin</artifactId>
						<version>2.1.10</version>
						<dependencies>
							<dependency>
								<groupId>org.apache.cxf</groupId>
								<artifactId>cxf-rt-frontend-jaxws</artifactId>
								<version>2.1.10</version>
								<scope>compile</scope>
							</dependency>
							<dependency>
								<groupId>org.apache.cxf</groupId>
								<artifactId>cxf-rt-frontend-simple</artifactId>
								<version>2.1.10</version>
								<scope>compile</scope>
							</dependency>
							<dependency>
								<groupId>io.openwis.securityservice.usermanagement.common</groupId>
								<artifactId>openwis-securityservice-usermanagement-common</artifactId>
								<version>${project.version}</version>
								<scope>compile</scope>
							</dependency>
							<dependency>
								<groupId>com.novell.ldap</groupId>
								<artifactId>jldap</artifactId>
								<version>4.3</version>
								<scope>compile</scope>
							</dependency>
							<dependency>
								<groupId>com.sun.javaee</groupId>
								<artifactId>javaee</artifactId>
								<version>5.0</version>
								<scope>compile</scope>
							</dependency>

						</dependencies>

						<executions>
							<execution>
								<id>process-classes-user</id>
								<phase>process-classes</phase>
								<configuration>
									<className>io.openwis.usermanagement.UserManagementServiceImpl</className>
									<genWsdl>true</genWsdl>
									<argline>-createxsdimports</argline>
									<verbose>true</verbose>
									<outputFile>${basedir}/target/generated/wsdl/UserManagementService.wsdl</outputFile>
								</configuration>
								<goals>
									<goal>java2ws</goal>
								</goals>
							</execution>
							<execution>
								<id>process-classes-group</id>
								<phase>process-classes</phase>
								<configuration>
									<className>io.openwis.usermanagement.GroupManagementServiceImpl</className>
									<genWsdl>true</genWsdl>
									<argline>-createxsdimports</argline>
									<verbose>true</verbose>
									<outputFile>${basedir}/target/generated/wsdl/GroupManagementService.wsdl</outputFile>
								</configuration>
								<goals>
									<goal>java2ws</goal>
								</goals>
							</execution>
							<execution>
								<id>process-classes-dissem-param</id>
								<phase>process-classes</phase>
								<configuration>
									<className>io.openwis.usermanagement.DisseminationParametersServiceImpl</className>
									<genWsdl>true</genWsdl>
									<argline>-createxsdimports</argline>
									<verbose>true</verbose>
									<outputFile>${basedir}/target/generated/wsdl/DisseminationParametersService.wsdl</outputFile>
								</configuration>
								<goals>
									<goal>java2ws</goal>
								</goals>
							</execution>
							<execution>
								<id>process-classes-monitoring</id>
								<phase>process-classes</phase>
								<configuration>
									<className>io.openwis.usermanagement.MonitoringServiceImpl</className>
									<genWsdl>true</genWsdl>
									<argline>-createxsdimports</argline>
									<verbose>true</verbose>
									<outputFile>${basedir}/target/generated/wsdl/MonitoringService.wsdl</outputFile>
								</configuration>
								<goals>
									<goal>java2ws</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
